<!--@subject {{trans 'New logistics order created' }}  @-->

{{template config_path="design/email/header_template"}}

<table>
    <tr class="email-intro">
        <td>
            <p class="greeting">Dear User,</p>
            <p>
                {{trans 'A logistics order has been created. Please find the information below.'}}
            </p>

            <table>
                <tbody>
                    <tr>
                        <td>Pickup:<br>
                            {{trans '<span class="no-link">%street</span>' street=$source.getStreet() | raw}} <br>
                            {{trans '<span class="no-link">%city</span>' city=$source.getCity() | raw}} <br>
                            {{trans '<span class="no-link">%region</span>' region=$regionCode | raw}} <br>
                            {{trans '<span class="no-link">%postcode</span>' postcode=$source.getPostcode() | raw}} <br>
                            {{trans '<span class="no-link">%country</span>' country=$source.getCountryId() | raw}} <br>
                            {{trans '<span class="no-link">%phone</span>' phone=$source.getPhone() | raw}} <br>

                        </td>
                        <td style="width:50%; margin-left:5%;">Delivery:<br>
                            {{trans '<span class="no-link">%firstname %lastname</span>' firstname=$shippingAddress.getFirstname() lastname=$shippingAddress.getLastname() | raw}} <br>

                            {{trans '<span class="no-link">%street</span>' street=$street | raw}} <br>
                            {{trans '<span class="no-link">%city</span>' city=$shippingAddress.getCity() | raw}} <br>
                            {{trans '<span class="no-link">%region</span>' region=$shippingAddress.getRegion() | raw}} <br>
                            {{trans '<span class="no-link">%postcode</span>' postcode=$shippingAddress.getPostcode() | raw}} <br>
                            {{trans '<span class="no-link">%country</span>' country=$shippingAddress.getCountryId() | raw}} <br>
                            {{trans '<span class="no-link">%telephone</span>' telephone=$shippingAddress.getTelephone() | raw}} <br>
                        </td>
                    </tr>
                </tbody>
            </table>

            <p> Items: {{trans '<span class="no-link">%dimensions</span>' dimensions=$dimensions | raw}} </p>
            <p> Total Weight: {{trans '<span class="no-link">%totalWeight</span>' totalWeight=$totalWeight | raw}} </p>
            <br><br>
            <p class="greeting">
                Thanks<br>
            </p>

        </td>
    </tr>
</table>

{{template config_path="design/email/footer_template"}}
